<div class="page-header">
  <h1>Chains</h1>
</div>

<% if current_user.chain_id.nil? %>
	<%= link_to 'Add Chains', new_chain_path, class: 'btn btn-primary pull-right' %>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Mall</th>
			<th>Logo</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @chains.each do |chain| %>
			<tr>
				<td><%= link_to chain.name, chain_path(chain) %></td>
				<td><%= link_to chain.mall.name, "/malls/#{chain.mall.id}" %></td>
				<td><%= image_tag chain.chain_logo.to_s %></td>
				<td><%= link_to 'Edit', edit_chain_path(chain) %> | <%= link_to 'Delete', chain, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
