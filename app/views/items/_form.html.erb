<%= simple_form_for(@item) do |f| %>
  <% if @item.errors.any? %>
  <%= pluralize(@item.errors.count, "error") %>
  	<%= @item.errors.full_messages.each do |msg| %>
  <%= msg %>
  	<% end %>
  <% end %>
<%= f.error_notification %>
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :price %>


<%= f.button :submit %>

<% end %>