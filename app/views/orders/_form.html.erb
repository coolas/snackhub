<%= simple_form_for(@order) do |f| %>
  <% if @order.errors.any? %>
  <%= pluralize(@order.errors.count, "error") %>
  	<%= @order.errors.full_messages.each do |msg| %>
  <%= msg %>
  	<% end %>
  <% end %>
<%= f.error_notification %>
<%= f.input :cinema_number %>
<%= f.button  :submit, "submit" %>

<% end %>