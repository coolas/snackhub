	<%= form_for @mall do |f| %>

	<%= f.label :name %> </br>
	<%= f.text_field :name %></br>
	<%=f.label :province %></br>
	<%= f.select :location_id, Location.all.map{ |m| [m.province, m.id] } %> </br>
	<%= f.label :address %> </br>
	<%= f.text_field :address %> </br>

	<%= f.submit %>
	<% end %>
