<div class="container">
	<%= simple_form_for(@mall) do |f| %>
		<% if @mall.errors.any? %>
		<%= pluralize(@mall.errors.count, "error") %>
			<%= @mall.errors.full_messages.each do |msg| %>
		<%= msg %>
			<% end %>
		<% end %>
		<%= f.error_notification %>
		<%= f.input :name %>
		<%= f.input :address, class: 'form-control' %>
		<%= f.button :submit %>

	<% end %>
</div>

