<%= simple_form_for(@mall) do |f| %>
  <% if @mall.errors.any? %>
  <%= pluralize(@mall.errors.count, "error") %>
  	<%= @mall.errors.full_messages.each do |msg| %>
  <%= msg %>
  	<% end %>
  <% end %>
<%= f.error_notification %>
<%= f.input :name %>
<%= f.label :province %>
<%= f.select :location_id, Location.all.map{ |m| [m.province, m.id] } %>
<%= f.input :address %>
<%= f.button :submit %>

<% end %>