<div class="page-header">
  <h1>Cards</h1>
</div>

<%= link_to 'Add Card', new_card_path, class: 'btn btn-primary pull-right' %>

<table class="table">
	<thead>
		<tr>
			<th>Card Number</th>
			<th>Amount</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @cards.each do |card| %>
			<tr>
				<td><%= link_to card.card_number, card_path(card) %></td>
				<td><%= card.amount %></td>
				<td><%= link_to 'Edit', edit_card_path(card) %> | <%= link_to 'Delete', card, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
