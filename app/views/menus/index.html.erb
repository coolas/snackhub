<div class="page-header">
  <h1>Menu</h1>
</div>


		<%= link_to 'Add Menu', new_menu_path, class: 'btn btn-primary pull-right' %>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Food Chain</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @menus.each do |menu| %>
			<tr>
				<td><%= link_to menu.name, menu_path(menu) %></td>
				<td><%= link_to menu.chain.name, "/Chains/#{menu.chain.id}" %></td>
				<td><%= link_to 'Edit', edit_menu_path(menu) %> | <%= link_to 'Delete', menu, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
